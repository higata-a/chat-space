.side-bar
  .side-bar__user-name
    .side-bar__user-name-items
      .side-bar__user-name-items__name
        = current_user.name
      .side-bar__user-name-items__icons
        = link_to new_group_path(current_user), class: "iconid" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "iconid" do
          = icon('fas', 'cog',)
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list-dsp
        = link_to group_messages_path(group) do
          .side-bar__group-list-dsp--name
            = group.name
          .side-bar__group-list-dsp--mess
            = group.show_last_message